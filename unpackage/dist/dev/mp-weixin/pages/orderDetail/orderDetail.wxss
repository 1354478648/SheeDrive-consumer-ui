.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  height: 100vh;
  padding: 20rpx;
}
.container .name-container {
  display: flex;
  flex-direction: column;
}
.container .name-container .car-name {
  font-size: 48rpx;
  font-weight: bold;
}
.container .name-container .car-model {
  font-size: 24rpx;
  color: #808080;
}
.container .image-box {
  width: 100%;
  height: 450rpx;
  margin-top: 30rpx;
  align-self: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.container .image-box .image {
  width: 100%;
  height: 450rpx;
}
.container .price-container {
  width: 100%;
  margin-top: 20rpx;
}
.container .price-container .price-container text {
  display: block;
}
.container .price-container .zhidao-price {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #808080;
}
.container .price-container .luodi-price {
  display: flex;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #cf4444;
}
.container .grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
.container .grid .grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 20rpx;
}
.container .grid .text {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.container .grid .label {
  font-size: 24rpx;
  color: #808080;
}
.container .dealer-title {
  display: flex;
  margin-top: 20rpx;
}
.container .dealer-title .dealer-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 5rpx;
}
.container .dealer-container {
  width: 100%;
  margin-top: 20rpx;
}
.container .dealer-container .dealer-name {
  font-size: 32rpx;
  font-weight: bold;
}
.container .dealer-container .box {
  display: flex;
  margin-top: 10rpx;
}
.container .dealer-container .box .dealer-distance {
  width: 100rpx;
  font-size: 24rpx;
  color: #808080;
}
.container .dealer-container .box .dealer-address {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #808080;
}
.container .dealer-container .dealer-desc-info {
  font-size: 24rpx;
  color: #808080;
}
.container .dealer-container .box2 {
  display: flex;
  margin-top: 30rpx;
}
.container .dealer-container .box2 .avatar-box {
  display: flex;
}
.container .dealer-container .box2 .avatar-box .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.container .dealer-container .box2 .avatar-box .detail {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.container .dealer-container .box2 .avatar-box .detail .dealer-phone {
  font-size: 24rpx;
}
.container .dealer-container .box2 .avatar-box .detail .dealer-order {
  font-size: 24rpx;
}
.container .dealer-container .box2 .avatar-box .button-box {
  display: flex;
  align-items: center;
  /* 垂直居中 */
  margin-left: 180rpx;
  /* 距离父元素右边边框的距离 */
}
.container .dealer-container .box2 .avatar-box .button-box .button {
  width: 180rpx;
  height: 80rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  color: #fff;
  background-color: #47dfff;
  border-radius: 80rpx;
}
.container .bottom {
  margin-top: 20rpx;
  min-height: 40rpx;
  /* 设置一个足够的最小高度 */
  display: flex;
  justify-content: center;
  /* 水平居中 */
  width: 100%;
  /* 设置一个合适的宽度 */
}
.container .bottom .buttom-text {
  font-size: 24rpx;
  color: #808080;
}
.container .form-container {
  width: 100%;
  margin-top: 20rpx;
}
.container .form-container .steps-container {
  margin-top: 20rpx;
}
.container .form-container .steps-container .icon {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.container .form-container .steps-container .status {
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}
.container .form-container .steps-container .status::before {
  display: block;
  font-size: 110rpx;
}
.container .form-container .form-item,
.container .form-container .uni-forms-item {
  display: flex;
  align-items: center;
  min-height: 96rpx;
  padding: 25rpx 10rpx 40rpx;
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  margin-bottom: 0;
}
.container .form-container .form-item .uni-forms-item__content,
.container .form-container .uni-forms-item .uni-forms-item__content {
  display: flex;
}
.container .form-container .form-item .uni-forms-item__error,
.container .form-container .uni-forms-item .uni-forms-item__error {
  margin-left: 200rpx;
}
.container .form-container .form-item:last-child,
.container .form-container .uni-forms-item:last-child {
  border: none;
}
.container .form-container .form-item .label,
.container .form-container .uni-forms-item .label {
  width: 200rpx;
  color: #333;
}
.container .form-container .form-item .data-picker,
.container .form-container .uni-forms-item .data-picker {
  width: 400rpx;
  color: #333;
}
.container .form-container .form-item .input,
.container .form-container .uni-forms-item .input {
  flex: 1;
  display: block;
  height: 46rpx;
}
.container .form-container .form-item .picker-input,
.container .form-container .uni-forms-item .picker-input {
  flex: 1;
  height: 46rpx;
  width: 100rpx;
  display: flex;
}
.container .form-container .form-item .picker-input .address-text,
.container .form-container .uni-forms-item .picker-input .address-text {
  white-space: nowrap;
  overflow-x: scroll;
  display: flex;
  /* 使得元素宽度根据内容自动调整 */
  max-width: 85%;
  /* 防止元素宽度超过父元素 */
}
.container .form-container .form-item .switch,
.container .form-container .uni-forms-item .switch {
  position: absolute;
  right: -20rpx;
  transform: scale(0.8);
}
.container .form-container .form-item .picker,
.container .form-container .uni-forms-item .picker {
  flex: 1;
}
.container .form-container .form-item .placeholder,
.container .form-container .uni-forms-item .placeholder {
  color: #808080;
}