/* 我的订单 */
.orders {
  position: relative;
  z-index: 99;
  padding: 30rpx;
  margin: 20rpx 20rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx rgba(240, 240, 240, 0.6);
}
.orders .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #1e1e1e;
}
.orders .title .navigator {
  font-size: 24rpx;
  color: #939393;
  float: right;
}
.orders .order-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  border-bottom: 1px solid #ccc;
}
.orders .order-container .order-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.orders .order-container .order-title .order-id {
  font-weight: bold;
}
.orders .order-container .order-title .order-status {
  margin-left: auto;
}
.orders .order-container .image-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.orders .order-container .image-container image {
  width: 40%;
  height: 200rpx;
}
.orders .order-container .image-container .order-info {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.orders .order-container .image-container .order-info text {
  display: block;
  margin: 15rpx;
  font-size: 24rpx;
}
.orders .order-container .steps-container {
  margin-top: 20rpx;
}
.orders .order-container .steps-container .icon {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.orders .order-container .steps-container .status {
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}
.orders .order-container .steps-container .status::before {
  display: block;
  font-size: 110rpx;
}
.orders .order-container .button-container {
  display: flex;
  justify-content: flex-end;
  margin-top: auto;
}
.orders .order-container .button-container .detail-button {
  height: 80rpx;
  margin: 30rpx 20rpx;
  color: #47dfff;
  border-radius: 80rpx;
  font-size: 28rpx;
  border: 2rpx solid #47dfff;
  background-color: transparent;
}
.orders .order-container .button-container .comment-button {
  height: 80rpx;
  margin: 30rpx 20rpx;
  color: #fff;
  border-radius: 80rpx;
  font-size: 28rpx;
  background-color: #47dfff;
}
.orders .section {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 20rpx 10rpx;
}
.orders .section .nodata {
  text-align: center;
  margin: 100rpx 0 100rpx 0;
}
.orders .section .nodata .nodata-text {
  font-size: 24rpx;
  color: #999;
}
.bottom {
  margin-top: 20rpx;
  min-height: 40rpx;
  /* 设置一个足够的最小高度 */
  display: flex;
  justify-content: center;
  /* 水平居中 */
  width: 100%;
  /* 设置一个合适的宽度 */
}
.bottom .buttom-text {
  font-size: 24rpx;
  color: #808080;
}